@model IEnumerable<OnlineFoodOrdering.Models.Entity.Categories>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1>Categories</h1>
    @if (User.IsInRole("Admin"))
    {
        
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    <table class="table table-sstriped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.CategoryName)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.ModifiedDate)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.ModifiedDate)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
        </table>

    }
    else
    {
        <div class="row gy-5 gx-5" style="gap: 20px !important;">
            @foreach (var category in Model)
            {
                <div class="card" style="width: 18rem;">
                    <img src="https://mdbcdn.b-cdn.net/img/new/standard/nature/184.webp" class="card-img-top" alt="Category Image" />
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => category.CategoryName)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => category.Description)</p>
                        <a href="@Url.Action("Details", new { id = category.CategoryId })" class="btn btn-primary" data-mdb-ripple-init>Details</a>
                    </div>
                </div>
            }
        </div>
    }
    </div>

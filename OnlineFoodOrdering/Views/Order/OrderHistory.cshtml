@model List<OnlineFoodOrdering.Models.Entity.Order>

@{
    ViewData["Title"] = "Order History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1>Order History</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Order Date</th>
                <th>Total Price</th>
                <th>Delivery Address</th>
                <th>Status</th>
                <th>Payment Method</th>
                <th>Action</th>
                <th>Feedback</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>@order.TotalPrice</td>
                    <td>@order.DeliveryAddress</td>
                    <td>@order.Status</td>
                    <td>@order.PaymentMethod</td>
                    <td>
                        <a asp-action="OrderDetails" asp-route-id="@order.OrderId" class="btn btn-info btn-sm">Details</a>
                    </td>
                    <td>
                        @if (order.Status == "Delivered")
                        {
                            <a asp-action="ProvideFeedback" asp-route-orderId="@order.OrderId" class="btn btn-success btn-sm">Provide Feedback</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var successMessage = "@TempData["SuccessMessage"]";

        if (successMessage) {
            // Display a Bootstrap alert with the success message
            var alertHtml = `<div class="alert alert-success alert-dismissible fade show" role="alert">
                                    ${successMessage}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                 </div>`;

            // Append the alert to the container
            document.body.insertAdjacentHTML("beforeend", alertHtml);
        }
    });
</script>

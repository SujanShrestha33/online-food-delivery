@model OnlineFoodOrdering.Models.Entity.SubCategories

<style>
    body {
        background-color: #f8f9fa;
    }

    .container-div {
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-top: 50px;
    }

    h1, h3, h4 {
        color: #dc3545;
    }

    dt {
        font-weight: bold;
        color: #495057;
    }

    dd {
        color: #6c757d;
    }

    .btn-danger {
        background-color: #dc3545;
        border: 1px solid #dc3545;
    }

        .btn-danger:hover {
            filter: brightness(90%);
        }

    .back-to-list {
        color: #007bff;
        text-decoration: none;
    }

        .back-to-list:hover {
            text-decoration: underline;
        }
</style>

<div class="container-div mt-5">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>

    <div>
        <h4>SubCategories</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SubCategoryName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SubCategoryName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SubCategoryDesc)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SubCategoryDesc)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.CategoryName)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="SubCategoryId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="back-to-list">Back to List</a>
        </form>
    </div>
</div>
